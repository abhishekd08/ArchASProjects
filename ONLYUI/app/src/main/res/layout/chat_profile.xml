<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/profileguide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/profileguide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/profileguide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <ImageView
        android:id="@+id/profilecoverimageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ff3a45"
        app:layout_constraintBottom_toBottomOf="@id/profileguide1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profilecovereditbutton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#f0f0f0"
        android:src="@drawable/ic_edit_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profiledpimageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dp_background"
        android:src="@drawable/ic_person_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/profileguide3"
        app:layout_constraintDimensionRatio="V,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileguide2" />

    <TextView
        android:id="@+id/profileeditbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/profile_edit_button_background"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="Edit"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilecoverimageview" />

    <TextView
        android:id="@+id/profilenametextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Name Lastname"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profiledpimageview" />

    <TextView
        android:id="@+id/profileusernametextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Username"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/profilenametextview" />

    <FrameLayout
        android:id="@+id/profileaboutframelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/profile_about_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileusernametextview" />

    <TextView
        android:id="@+id/profileabouttitletextview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_about_title_background"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="About"
        android:textColor="@color/colorWhite"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="@id/profileaboutframelayout"
        app:layout_constraintRight_toRightOf="@id/profileaboutframelayout"
        app:layout_constraintTop_toTopOf="@id/profileaboutframelayout" />

</android.support.constraint.ConstraintLayout>