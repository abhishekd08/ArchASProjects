<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/signupguide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/signupguide2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/signupguide3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/signupguide4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <ImageView
        android:id="@+id/signuplogoimgvw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_logo_vector"
        app:layout_constraintBottom_toBottomOf="@id/signupguide4"
        app:layout_constraintLeft_toLeftOf="@id/signupguide2"
        app:layout_constraintRight_toRightOf="@id/signupguide3"
        app:layout_constraintTop_toTopOf="@id/signupguide1" />

    <android.support.constraint.Guideline
        android:id="@+id/signupguide5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/signupguide6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <android.support.constraint.Guideline
        android:id="@+id/signupguide7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/signupguide8"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/signuptitletextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sign Up"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/signupframebackgroundlayout"
        app:layout_constraintTop_toBottomOf="@id/signuplogoimgvw" />

    <FrameLayout
        android:id="@+id/signupframebackgroundlayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/signup_frame_background"
        app:layout_constraintBottom_toBottomOf="@id/signupguide6"
        app:layout_constraintLeft_toLeftOf="@id/signupguide7"
        app:layout_constraintRight_toRightOf="@id/signupguide8"
        app:layout_constraintTop_toTopOf="@id/signupguide5" />

    <EditText
        android:id="@+id/signupusernameedittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="8dp"
        android:hint="Username"
        app:layout_constraintBottom_toTopOf="@id/signuppasswordedittext"
        app:layout_constraintLeft_toLeftOf="@id/signupguide7"
        app:layout_constraintRight_toRightOf="@id/signupguide8"
        app:layout_constraintTop_toTopOf="@id/signupguide5" />

    <EditText
        android:id="@+id/signuppasswordedittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="8dp"
        android:hint="Password"
        app:layout_constraintBottom_toTopOf="@id/signupconformpasswordedittext"
        app:layout_constraintLeft_toLeftOf="@id/signupguide7"
        app:layout_constraintRight_toRightOf="@id/signupguide8"
        app:layout_constraintTop_toBottomOf="@id/signupusernameedittext" />

    <EditText
        android:id="@+id/signupconformpasswordedittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="8dp"
        android:hint="Confirm Password"
        app:layout_constraintBottom_toTopOf="@id/signupbutton"
        app:layout_constraintLeft_toLeftOf="@id/signupguide7"
        app:layout_constraintRight_toRightOf="@id/signupguide8"
        app:layout_constraintTop_toBottomOf="@id/signuppasswordedittext" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="@id/signupguide6"
        app:layout_constraintLeft_toLeftOf="@id/signupguide7"
        app:layout_constraintRight_toRightOf="@id/signupguide8"
        app:layout_constraintTop_toBottomOf="@id/signupconformpasswordedittext" />

    <View
        android:id="@+id/signupseparatorline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/signupguide6" />

    <TextView
        android:id="@+id/signuportextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Or"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/signupseparatorline" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signupgooglesigninbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/signupfacebooksigninbutton"
        app:layout_constraintTop_toBottomOf="@id/signupseparatorline" />

    <Button
        android:id="@+id/signupfacebooksigninbutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/facebook_button_background"
        android:drawableLeft="@drawable/ic_facebook_app_logo"
        android:drawablePadding="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="6dp"
        android:text="Login with Facebook"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/signupgooglesigninbutton"
        app:layout_constraintLeft_toRightOf="@id/signupgooglesigninbutton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/signupgooglesigninbutton" />

</android.support.constraint.ConstraintLayout>