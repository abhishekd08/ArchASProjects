<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/signinguide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/signinguide2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/signinguide3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/signinguide4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <ImageView
        android:id="@+id/signinlogoimgvw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_logo_vector"
        app:layout_constraintBottom_toBottomOf="@id/signinguide4"
        app:layout_constraintLeft_toLeftOf="@id/signinguide2"
        app:layout_constraintRight_toRightOf="@id/signinguide3"
        app:layout_constraintTop_toTopOf="@id/signinguide1" />

    <android.support.constraint.Guideline
        android:id="@+id/signinguide5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/signinguide6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <android.support.constraint.Guideline
        android:id="@+id/signinguide7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/signinguide8"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/signintitletextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sign Up"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/signinframebackgroundlayout"
        app:layout_constraintTop_toBottomOf="@id/signinlogoimgvw" />

    <FrameLayout
        android:id="@+id/signinframebackgroundlayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/signup_frame_background"
        app:layout_constraintBottom_toBottomOf="@id/signinguide6"
        app:layout_constraintLeft_toLeftOf="@id/signinguide7"
        app:layout_constraintRight_toRightOf="@id/signinguide8"
        app:layout_constraintTop_toTopOf="@id/signinguide5" />

    <EditText
        android:id="@+id/signinusernameedittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="8dp"
        android:hint="Username"
        app:layout_constraintBottom_toTopOf="@id/signinpasswordedittext"
        app:layout_constraintLeft_toLeftOf="@id/signinguide7"
        app:layout_constraintRight_toRightOf="@id/signinguide8"
        app:layout_constraintTop_toTopOf="@id/signinguide5" />

    <EditText
        android:id="@+id/signinpasswordedittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="8dp"
        android:hint="Password"
        app:layout_constraintBottom_toTopOf="@id/signinbutton"
        app:layout_constraintLeft_toLeftOf="@id/signinguide7"
        app:layout_constraintRight_toRightOf="@id/signinguide8"
        app:layout_constraintTop_toBottomOf="@id/signinusernameedittext" />

    <Button
        android:id="@+id/signinbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="@id/signinguide6"
        app:layout_constraintLeft_toLeftOf="@id/signinguide7"
        app:layout_constraintRight_toRightOf="@id/signinguide8"
        app:layout_constraintTop_toBottomOf="@id/signinpasswordedittext" />


</android.support.constraint.ConstraintLayout>