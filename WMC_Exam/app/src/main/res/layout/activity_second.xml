<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/secondactivity_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Second Activity"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/secondactivity_nametextview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/secondactivity_nametextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/secondactivity_prev_button"
        app:layout_constraintTop_toBottomOf="@id/secondactivity_textview" />

    <Button
        android:id="@+id/secondactivity_prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/secondactivity_next_button"
        app:layout_constraintTop_toBottomOf="@id/secondactivity_nametextview" />

    <Button
        android:id="@+id/secondactivity_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next activity"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/secondactivity_prev_button"
        app:layout_constraintLeft_toRightOf="@id/secondactivity_prev_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/secondactivity_prev_button" />

</android.support.constraint.ConstraintLayout>